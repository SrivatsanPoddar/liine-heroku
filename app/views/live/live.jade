div(ng-controller="LiveController")
	div.row.text-center
		div.col-xs-4.col-xs-offset-1
			h3 Pending Connections
			div(ng-repeat="(senderIndex, callPath) in pendingConnections")
				button.btn.btn-default(type="submit" ng-click="pair(senderIndex)") {{callPath}}
		div.col-xs-4.col-xs-offset-4(ng-if="isConnected")
			h3 Current Call
			button.btn.btn-primary(type="submit" ng-click="sendRequest({request_format: 'edit_text', request_type: 'address', message: 'Enter Address Here:'})") Request Address
			button.btn.btn-primary(type="submit" ng-click="sendRequest({request_format: 'edit_text', request_type: 'name', message: 'Enter Name Here:'})") Request Name
			button.btn.btn-primary(type="submit" ng-click="sendRequest({request_format: 'edit_text', request_type: 'phone_number', message: 'Enter Phone Number Here:'})") Request Phone Number
			button.btn.btn-primary(type="submit" ng-click="sendRequest({request_format: 'edit_text', request_type: 'birthdate', message: 'Enter Birthdate Here:'})") Request Birthdate
			br
			br
			input.form-control(ng-model="link_url" type="text" placeholder="Enter URL, Phone Number, or Email Address here...")
			br
			input.form-control(ng-model="link_description" type="text" placeholder="Enter description here...")
			br
			button.btn.btn-default(type="submit" ng-click="sendRequest({request_format: 'link', request_type: link_description, message: link_url})") Send

			br
			br
			h5 Customer Responses
			div(ng-repeat="message in messages") 
				p {{message.message}}
			input.form-control(ng-model="message" type="text" placeholder="Enter message here...")
			br
			button.btn.btn-default(type="submit" ng-click="sendMessage(message)") Submit


